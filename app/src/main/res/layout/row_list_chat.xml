<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/row_user_near">


    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/foto_perfil"
        android:src="@drawable/ic_attach_file"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre"
        android:id="@+id/nombre"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"
        android:lines="1"
        android:paddingTop="10dp"
        android:ellipsize="marquee"
        android:layout_alignTop="@+id/foto_perfil"
        android:layout_toRightOf="@+id/foto_perfil"
        android:layout_toEndOf="@+id/foto_perfil" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/fecha"
        android:id="@+id/fecha"
        android:layout_marginRight="15dp"
        android:lines="2"
        android:paddingBottom="10dp"
        android:ellipsize="end"
        android:layout_below="@+id/nombre"
        android:layout_alignLeft="@+id/nombre"
        android:layout_alignStart="@+id/nombre"/>




</RelativeLayout>